<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--Removing actionbar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/AntlBackGround</item>
        <item name="android:textColorPrimary">@color/AntlAccentLight</item>
        <item name="android:colorBackground">@color/AntlBackGround</item>
        <item name="android:navigationBarColor">@android:color/background_dark</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">#EFF1F3</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/AntlText</item>
        <item name="android:background">@color/AntlAccentLight</item>
    </style>
</resources>
