<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/AntlBackGround">

    <TextView
        android:id="@+id/textView"
        android:layout_width="256dp"
        android:layout_height="76dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="48dp"
        android:contentDescription="@string/create_event_date"
        android:fontFamily="monospace"
        android:text="@string/create_event_date"
        android:textColor="@color/AntlAccentLight"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:id="@+id/createEventDateNextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/create_event_next_button"
        android:maxLines="1"
        android:text="@string/create_event_next_button"
        android:textAlignment="textEnd"
        app:cornerRadius="25sp"
        app:icon="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterEventDescription"
        app:layout_constraintVertical_bias="0.843"
        app:rippleColor="@color/AntlBackGround" />

</androidx.constraintlayout.widget.ConstraintLayout>